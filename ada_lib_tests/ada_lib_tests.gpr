with "alr_environment.gpr";
--with "aunit.gpr";
with "ada_lib.gpr";
with "ada_lib_gnoga.gpr";
with "default_config.gpr";
--with "config/ada_lib_tests_config.gpr";
--with "gnatcoll.gpr";
with "gnoga.gpr";

project Ada_Lib_Tests is
   for Source_Dirs use ("src/");
   for Object_Dir use "obj/" & ALR_Environment.Mode;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("test_ada_lib.adb");

   package Compiler is
      for Default_Switches ("Ada") use Default_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es", --  Symbolic traceback
                                "-l"); -- output elaboration order
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use Default_Config.Linker_Options;
   end Linker;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

   package Builder is
      case ALR_Environment.Mode is

         when "execute" =>
            for Executable ("test_ada_lib.adb") use "test_ada_lib";

         when "help_test" =>
            for Executable ("test_ada_lib.adb") use "help_test";

      end case;
   end Builder;

end Ada_Lib_Tests;
