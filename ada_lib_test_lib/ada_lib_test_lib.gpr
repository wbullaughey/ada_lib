with "ada_lib.gpr";
with "ada_lib_aunit.gpr";
with "gnoga_ada_lib.gpr";
with "gnoga_options.gpr";
with "alr_environment.gpr";
with "aunit.gpr";
with "config/ada_lib_test_lib_config.gpr";
with "default_config.gpr";
with "gnoga.gpr";
--with "xmlada";

project Ada_Lib_Test_Lib is
   for Library_Name use "Ada_Lib_Test_Lib";
   for Library_Version use Project'Library_Name & ".so." & Ada_Lib_Test_Lib_Config.Crate_Version;

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & ALR_Environment.Build_Mode;
   for Create_Missing_Dirs use "True";
   for Library_Dir use "lib/" & ALR_Environment.Build_Mode;

   type Library_Type_Type is ("relocatable", "static", "static-pic");
   Library_Type : Library_Type_Type :=
     external ("TEST_LIB_LIBRARY_TYPE", external ("LIBRARY_TYPE", "static"));
   for Library_Kind use Library_Type;

   package Compiler is
      for Default_Switches ("Ada") use Default_Config.Ada_Compiler_Switches;
--    for Default_Switches ("Ada") use Camera_Test_Lib_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

 end Ada_Lib_Test_Lib;
